				#memberContainer > div {
					grid-column: span 4;
				}

				#memberContainer > div:nth-child(5n),
				#memberContainer > div:nth-child(5n-1){
					grid-column: span 6;
				}

				#memberContainer > div:last-child {
					display: none;
				}
			}
			/* */

			#explanation > img {
				width: 40%;
			}

			#explanationRightColumn {
				width: 60%;
				min-height: 70vh;
				display: flex;
				flex-direction: column;
				justify-content: space-around;
				align-items: center;
				padding: 0 3vw;
			}

			@media (min-width: 800px) { /* on desktop */
